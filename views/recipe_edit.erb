<h2 class="edit_ingredient">Edit <%= @recipe.name %></h2>

<table class="table">
  <p class="table_header">Ingredient Name</p>
  <tr>
    <% @recipe.recipe_ingredients.each() do |ingredient|%>
    <td><%= ingredient.ingredient_id%></td>
    <% end %>
  </tr>
  <tr>
    <% @recipe.ingredients.each() do |ingredient|%>
    <td><%= ingredient.name%></td>
    <% end %>
  </tr>
  <tr>
    <% @recipe.recipe_ingredients.each() do |ingredient|%>
    <td><%= ingredient.amount%></td>
    <% end %>
  </tr>
  <tr>
    <% @recipe.recipe_ingredients.each() do |ingredient|%>
    <td><%= ingredient.unit%></td>
    <% end %>
  </tr>
</table>
<form action="/recipes/<%= @recipe.id %>/edit" method="post">
  <label for="instructions">Add Instructions</label>
  <input type="text" name="instructions" class="form-control">
  <br>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<form action="/recipes/<%= @recipe.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <br>
  <p class="ingredient">Add Ingredient</p>
  <div class="form-group">
    <label for="ingredient">Ingredient:</label>
    <select name="ingredient">
      <% @ingredients.each do |ingredient| %>
      <option value="<%= ingredient.id %>"><%=ingredient.name %></option>
      <% end %>
    </select>
    <label for="amount">Amount:</label>
    <input type="text" name="amount">
    <label for="unit">Unit:</label>
    <input type="text" name="unit">
  </div>
  <button type="submit" class="btn btn-info">Add</button>
</form>
<br>
<br>
<form action="/recipes/ingredients/new" method="post">
  <label for="new_ingredient_name">Add a new ingredient</label>
  <input type="text" name="new_ingredient_name" class="form-control">
  <br>
  <button type="submit" name="button">Add</button>
</form>
<br>
<form class="form-inline" method="get" action="/">
  <button type="submit" class="btn btn-danger" name="clear_btn">Home</button>
</form>

<form action="/recipes/<%= @recipe.id %>/edit" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" name="button">Delete</button>
</form>
